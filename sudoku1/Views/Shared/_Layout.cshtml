                                <button type="button" class="btn btn-generate" ng-click="generate()">Generate  board</button>
                                <button type="button" class="btn btn-success" ng-click="solve()">Solve</button>
                                <button type="button" class="btn btn-success" ng-click="test()">test</button>
                            </div>
