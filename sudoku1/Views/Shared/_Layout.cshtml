            });
            $('#validate').click(function () {
                game.validate();
            });
            $('#reset').click(function () {
                game.reset();
            });
            $('#row').click(function () {
                game.hint('row');
            });
            $('#box').click(function () {
                game.hint('box');
            });
            $('#column').click(function () {
                game.hint('column');
            });
            $('#cell').click(function () {
